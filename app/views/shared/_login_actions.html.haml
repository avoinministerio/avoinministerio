.login_actions.top_row
  - if citizen_signed_in?
    .grid_12#signed_in_links
      = link_to t('.profile'), profile_path
      |
      = link_to t('.settings'), edit_profile_path
      |
      = link_to t('.reset_password'), edit_citizen_path
      - if current_citizen.count_unread_messages == "0"
        |
        = link_to image_tag("no_message.png", :border => 0), conversations_path
      - else
        #notification_container
          |
          = link_to image_tag("new_message.png", :border => 0), conversations_path
          .notification_bubble
            =current_citizen.count_unread_messages
      |
      = link_to t('.logout'), destroy_citizen_session_path, method: :delete
    .grid_4
      %img.avatar{ src: current_citizen.image, width: 25, height: 25, alt: "avatar" }
      #{current_citizen.name}
  - else
    .grid_12
      = link_to_unless_current image_tag("greatbritain.png", :border => 0), locale: "en"
      = link_to_unless_current image_tag("finland.png", :border => 0), locale: "fi"
      |
      = link_to t('.registration'), new_citizen_registration_path, id: 'register'
      |
      = link_to t('.login_facebook'), citizen_omniauth_authorize_path(:facebook), id: 'login-fb'
      |
      = link_to t('.login'), new_citizen_session_path, id: 'login'