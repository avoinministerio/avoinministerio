<h2 class="title">Kirjaudu sisään</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>

    <%= f.label(:remember_me, "#{f.check_box(:remember_me)}\n#{'Muista minut'}\n".html_safe) %>

  <% end -%>
  <div class="actions fl-right">
    <%= f.submit "Kirjaudu", :class => "btn btn-small btn-primary" %>
  </div>
<% end %>
