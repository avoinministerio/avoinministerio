    :javascript
      #{KM.js}

  %body{id: "#{params[:controller].parameterize}_page"}
    %div.page
      %header.border-double-dotted{ :role => "banner" }
        = link_to image_tag("logo.png"), root_path, id: "logo"
        .top-row.border-double-dotted
          .actions.fl-right
            = render partial: 'shared/login_actions'
        = render partial: 'shared/facebook_js'
        .actions.fl-right
          %ul.idea-actions
            %li.actions-item
              = link_to "Listaa kaikki", ideas_path
            %li.actions-item
              = link_to "Anna idea", new_idea_path
      %section{ :class => "", :role => "main" }

        = yield
      %div.page-footer

