!!! 5
/[if lt IE 9] <html class="ie">
/[if gte IE 9] <html>
%head
  %meta{ :charset => "utf-8" }/
  %meta{ :content => "width=device-width, initial-scale=1", :name => "viewport" }/
  %link{ href: asset_path('favicon.ico'), rel: 'shortcut icon', type: 'image/x-icon' }
  - if @idea
    = yield :facebook_metadata_for_idea
  - else
    = render 'shared/facebook_meta_tags'
  - if content_for? :head
    = yield :head
  - else
    %title
      = t('.title')

  = stylesheet_link_tag "application.css"
  = javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false"
  = javascript_include_tag "application"
  
  /= javascript_include_tag "vote-flow/impact-code" if params[:controller] == "ideas" and params[:action] == "vote_flow"
  :javascript
    if (window.location.hash == '#_=_') {
      if (console && 'function' == typeof console.warn) console.warn("Remove this ugly Facebook auth hax when https://developers.facebook.com/bugs/196125357123225 is fixed.");
      window.location.href = window.location.toString().split("#")[0];
    }
  /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>

  :javascript
    #{KM.js}

%body
  %header.container_24.top_row_container
    .container_24.top_row
  %header.container_24
    = link_to image_tag("logo_" + I18n.locale.to_s + ".png"), root_path, id: "logo", class: "grid_12"
    = render partial: 'shared/login_actions'
    = render partial: 'shared/facebook_js'
    .idea_actions.bottom_row
      .grid_5
        &nbsp;
      .grid_3
        = link_to t('.ideas'), ideas_path
      .grid_3
        = link_to t('.new_idea'), new_idea_path
      .grid_2
        &nbsp;
      .grid_7
        = survey_button
  .container.container_24
    %section
      = yield
  #footer_container
    %footer.container_24
      = link_to t('.how_does_it_work?'), "/artikkelit/miten-palvelu-toimii", :class => "grid_6"
      = link_to t('.experts'), "/artikkelit/asiantuntijoille-ja-tutkijoille", :class => "grid_6"
      = link_to t('.media'), "/artikkelit/medialle", :class => "grid_6"

      .grid_6
        %div{:class => "addthis_toolbox addthis_default_style"}
          %a{:class => "addthis_button_preferred_1"}
          %a{:class => "addthis_button_preferred_2"}
          %a{:class => "addthis_button_preferred_3"}
          %a{:class => "addthis_button_preferred_4"}
          %a{:class => "addthis_button_compact"}
          %a{:class => "addthis_counter addthis_bubble_style"}

      %br
      
      = link_to t('.FAQ'), "/artikkelit/20-usein-kysyttyja-kysymyksia", :class => "grid_6"
      = link_to t('.blog_entries'), "/artikkelit?article_type=blog", :class => "grid_6"

      %br
      
      = link_to t('.contact'), "/artikkelit/yhteystiedot", :class => "grid_6"
      = link_to t('.terms_of_use'), "/artikkelit/kayttoehdot", :class => "grid_6"
      = link_to t('.privacy'), "/artikkelit/rekisteriseloste", :class => "grid_6"

  %script{:type => "text/javascript", :src => "//s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f201d4978456053"}

  = render :partial => 'shared/ga' if ENV["GA_TRACKING_ID"]
