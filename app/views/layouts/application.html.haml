    %meta{ :content => "width=device-width, initial-scale=1", :name => "viewport" }/
    %link{ href: asset_path('favicon.ico'), rel: 'shortcut icon', type: 'image/x-icon' }
    - if @idea
      = yield :facebook_metadata_for_idea
    - else
      = render 'shared/facebook_meta_tags'
