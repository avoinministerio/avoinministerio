- content_for :head do
  %title= "Avoin Ministeriö -- #{@article_type_heading}"
.blogs_header
  %h1= @article_type_heading

.blogs
  - @blogs.each do |blog|
    .blog
      .info
        %span.author
          = blog.author.name
        %span.date
          = finnishDate(blog.updated_at)
        - if blog.title.size > 0
          %h2= link_to blog.title, blog
        - else
          %h2.notitle= link_to "Ei otsikkoa", blog
      .content
        = link_to shortened_summary(blog.ingress, 307, 264, "»"), blog
        .stats
          /%span.comment-count= (blog.comment_count || 0)
          %span.comment-count= 0
= will_paginate @blogs
