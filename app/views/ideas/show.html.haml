- content_for :facebook_metadata_for_idea do
  = render partial: 'facebook_meta_tags'
- content_for :head do
  %title= "@Avoinministerio #{state_localised(@idea.state).capitalize}: #{shorten(@idea.title, 125, 15, "")}"
:javascript
  $(document).ready(function(){
      var r = Raphael("votepie");
      var pie = r.piechart(135, 92, 57, [
          // piechart requires non-zero sizes to draw properly, so let's guard these values
          #{@idea_vote_for_count      == 0 ? 0.00001 : @idea_vote_for_count},
          #{@idea_vote_against_count  == 0 ? 0.00001 : @idea_vote_against_count}
        ],
        {
          legend: [
              "#{@idea_vote_for_count} Kyllä #{@idea_vote_for_count == 1 ? "ääni" : "ääntä"} %%.%",
              "#{@idea_vote_against_count} Ei #{@idea_vote_against_count == 1 ? "ääni" : "ääntä"} %%.%"
            ],
          legendpos: "south", 
          colors: #{@colors.inspect},
          // Clicking portions could link somewhere
          // href: ["http://somewhere.com", "http://somewhere.com"]
        });

      r.text(130, 17, "#{@idea_vote_count} äänen jakautuminen").attr({ font: "17px sans-serif" });
      pie.hover(function () {
          this.sector.stop();
          this.sector.scale(1.1, 1.1, this.cx, this.cy);

          if (this.label) {
              this.label[0].stop();
              this.label[0].attr({ r: 7.5 });
              this.label[1].attr({ "font-weight": 800 });
          }
      }, function () {
          this.sector.animate({ transform: 's1 1 ' + this.cx + ' ' + this.cy }, 500, "bounce");

          if (this.label) {
              this.label[0].animate({ r: 5 }, 500, "bounce");
              this.label[1].attr({ "font-weight": 400 });
          }
      });
  });
.prevnext
  .grid_24
    / This is a layout BUG: grid_12 + grid_12 does not fit in .grid_24 due some margins set somewhere
    / Workaround with grid_11 + grid_12 < grid_24
    .grid_11 
      - if @prev
        =link_to "Edellinen", idea_path(@prev, so: @sorting_order_code)
      - else
        .noprevnext &nbsp;
    .grid_12.right
      - if @next
        =link_to "Seuraava", idea_path(@next, so: @sorting_order_code)
      - else
        .noprevnext
.clear
.grid_24
  = idea_state_image(@idea)
.idea.grid_24
  .author
    -if @idea.published?
      %img.avatar{ src: @idea.author.image, width: 48, height: 48 }
      %span.name= @idea.author.name
      %span.date.sans_serif= finnishDate(@idea.created_at)
  .grid_16.alpha
    - if @idea.published?
      %h1= @idea.title
      .summary
        = markdown(@idea.summary) if @idea.summary
      .body
        = markdown(@idea.body) if @idea.body
    - else
      %h1 Piilotettu
      .summary
        Tämä idea on tällä hetkellä piilotettu. Voit kääntyä 
        %a{href: "mailto:kanslia@avoinministerio.fi"}kanslia@avoinministerio.fi
        puoleen mahdollisilla kysymyksilläsi.
      .body
    - if @idea.author == current_citizen or administrator_signed_in?
      = link_to I18n.t("idea.links.edit_idea"), edit_idea_path(@idea)

  -if @idea.published?
    .grid_7.prefix_1.omega
      .share
        %div{:class => "addthis_toolbox addthis_default_style addthis_32x32_style"}
          %a{:class => "addthis_button_facebook"}
          %a{:class => "addthis_button_twitter"}
          %a{:class => "addthis_button_gmail"}
          %a{:class => "addthis_button_google_plusone_share"}
          / This like does not seem to scale to 32x32 style
          /%a{:class => "addthis_button_facebook_like", "fb:like:width" => "115"}
        .sharing-suggestion
          - if @idea.voted_by?(current_citizen)
            - if @idea.votes.by(current_citizen).first.option == 0
              Saat tukea ideaa vastaan huomattavasti enemmän, kun jaat sitä eteenpäin.
            - else
              Saat idealle huomattavasti enemmän tukea, kun jaat sitä eteenpäin.
          - else
            Jaa ideaa aktiivisesti eteenpäin! Lisäät sen painoarvoa, oletpa puolesta tai vastaan!

  -if @idea.published?
    %aside.grid_7.prefix_1.omega
      .voting
        - if @idea.voted_by?(current_citizen)
          %h3 Voit lisätä kantasi painoa jakamalla aloitetta aktiivisesti eteenpäin!
          %hr

        - case @idea.state
        - when "idea"
          - if @idea.voted_by?(current_citizen)
            %h3
              Annoit tukesi
              %b #{vote_in_words(@idea, current_citizen)},
            %h4 voit halutessasi vaihtaa kantaasi.
          - else
            %h3 Anna tukesi!
          %h4 Ilmoitamme ideaa tukeneille, kun idea on kehittynyt lakiluonnokseksi.
          = link_to "Kyllä", vote_idea_path(@idea.id, vote: 1), class: "btn jaa-btn"
          = link_to "Ei", vote_idea_path(@idea.id, vote: 0), class: "btn ei-btn"
          .votes
            #votepie

        - when "draft"
          - if @idea.voted_by?(current_citizen)
            %h3
              Annoit tukesi
              %b #{vote_in_words(@idea, current_citizen)},
            %h4 voit halutessasi vaihtaa kantaasi.
          - else
            %h3 Kannatatko lakiluonnosta? 
          %h4 Ilmoitamme kaikille tukeneille, kun aloite on virallisesti käynnistynyt ja voit täyttää virallisen kannatusilmoituksen.
          = link_to "Kyllä", vote_idea_path(@idea.id, vote: 1), class: "btn jaa-btn"
          = link_to "Ei", vote_idea_path(@idea.id, vote: 0), class: "btn ei-btn"
          .votes
            #votepie

        - when "proposal"
          - if @idea.voted_by?(current_citizen)
            %h3
              Annoit tukesi
              %b #{vote_in_words(@idea, current_citizen)},
            %h4 voit halutessasi vaihtaa kantaasi.
          - else
            %h3 Kannatatko lakiehdotusta? 
          %h4 Virallinen sähköinen kannatuksen ilmoittaminen ei ole vielä mahdollista Avoimen ministeriön palvelussa. Pyrimme valmistelemaan sen mahdollisimman pian. Tarkista aloitteen lopusta kuinka voit allekirjoittaa paperisen kannatusilmoituksen.
          %h4 Sillä välin voit ilmoittaa epämuodollisen tukesi lakiehdotukselle. Ilmoitamme kaikille tukeneille kun myös sähköiset kannatusilmoitukset ovat mahdollisia.
          = link_to "Kyllä", vote_idea_path(@idea.id, vote: 1), class: "btn jaa-btn"
          = link_to "Ei", vote_idea_path(@idea.id, vote: 0), class: "btn ei-btn"
          .votes
            #votepie

          .signature
            - started = @idea.collecting_started || @idea.collecting_start_date <= today_date
            - ended = @idea.collecting_ended     || @idea.collecting_end_date    < today_date
            - on_going = started and (not ended)

            - completed_signature = Signature.where(state: "completed", citizen_id: current_citizen.id, idea_id: @idea.id).first
            - if completed_signature
              Olet jo allekirjoittanut kannatusilmoituksen onnistuneesti. Et voi allekirjoittaa sitä uudelleen, mutta nyt koska kyseessä on demo niin sallimme uusia ilmoituksia.

            - if on_going
              .button
                = link_to "Allekirjoita kannatusilmoitus", signature_idea_path(@idea.id), class: "btn jaa-btn"
            - if ended
              Tämän aloitteen kannatusilmoitusten keräysaika on jo päättynyt, mutta keräämme ilmoituksia silti siltä varalta että aloite aktivoidaan uudelleen. Siinä tapauksessa lähetämme sinulle sähköpostin että voit allekirjoittaa sen uudelleen.
              .button
                = link_to "Allekirjoita kannatusilmoitus jälkikäteen", signature_idea_path(@idea.id), class: "btn jaa-btn"
            .stat Aloitteen kannatusilmoitukset
            .stat
              Keruu on 
              = (on_going ? "käynnissä" : (not started ? "alkamatta" : "päättynyt"))
            .stat
              Keräys on
              = (started ? "käynnistynyt" : "käynnistymässä")
              = finnishDate(@idea.collecting_start_date)
            .stat
              Keräys 
              = (ended ? "päättyi" : "päättyy")
              = finnishDate(@idea.collecting_end_date)
            .stat
              Kerätty 
              - dates_collected = (today_date - @idea.collecting_start_date + 1).to_i
              - p dates_collected
              = dates_collected
              päivää

            .stat
              Avoimessa ministeriössä kerätty
              - signatures_count = @idea.signatures.where(state: "completed").count
              = signatures_count
              kpl
            .stat
              Kerätty muualla n.
              = @idea.additional_signatures_count
              kpl (arvioitu ja n. kerran viikossa päivitettävä tieto)
            .stat
              Muualla kerättyjen lukumäärä päivitetty
              = finnishDate(@idea.additional_signatures_count_date)
            .stat
              Kerätty yhteensä siis n.
              - total_signatures = signatures_count + @idea.additional_signatures_count
              = total_signatures
              kpl (arvio)
            .stat
              Tavoitemäärä 
              = @idea.target_count
              kpl
            .stat
              Tavoitteesta kerätty
              = sprintf("%.3f%%", total_signatures.to_f / @idea.target_count * 100.0)

            - signatures_per_day = (total_signatures.to_f) / dates_collected
            - total_days_to_reach_target = (@idea.target_count)                    / signatures_per_day
            - still_days_to_reach_target = (@idea.target_count - total_signatures) / signatures_per_day
            - if on_going
              .stat
                Tähän mennessä kerätty keskimäärin
                = sprintf("%.1f", signatures_per_day)
                kpl / päivä
              - if signatures_per_day > 0.0
                .stat
                  Tällä tahdilla kerääminen kestänee kaikkiaan
                  = sprintf("%.1f", total_days_to_reach_target)
                  päivää
                .stat
                  Eli vielä
                  = sprintf("%.1f", still_days_to_reach_target)
                  päivää
                .stat
                  Eli olisi arviolta valmis
                  = finnishDate(today_date + still_days_to_reach_target)
                .stat
                  Tällä tahdilla 
                  = ((today_date + still_days_to_reach_target) <= @idea.collecting_end_date) ? "ehditään kerätä ilmoitukset" : "ei ehditä kerätä ilmoituksia riittävästi"
                  ennen päättymispäivää
            - if ended
              .stat
                Kannatusilmoitusten keräys on päättynyt
              .stat
                Ilmoituksia kerättiin keskimäärin
                = sprintf("%.1f", signatures_per_day)
                kpl / päivä
              .stat
                Sillä tahdilla kerääminen olisi arvioidusti kestänyt
                = total_days_to_reach_target
                päivää

        - else # idea is already a law, no voting
          Idea on jo laki


-if @idea.published?
  .expert_opinions
    %h2.grid_24 Asiantuntijalausunnot
    - if @idea.articles.published.any?
      = render partial: 'article', collection: @idea.articles.published
      .clear
      .grid_17 &nbsp;
      .grid_7
        %a.grid_4{ href: "/artikkelit/asiantuntijoille-ja-tutkijoille" } Oletko asiantuntija
        .clear
        =link_to "Ehdota asiantuntijaa", new_idea_expert_suggestion_path(@idea), class: "grid_4"
      .clear
    - else
      .grid_17
        Ei vielä lausuntoja
      .grid_7
        %a.grid_4{ href: "/artikkelit/asiantuntijoille-ja-tutkijoille" } Oletko asiantuntija
        .clear
        =link_to "Ehdota asiantuntijaa", new_idea_expert_suggestion_path(@idea), class: "grid_4"
      .clear

  .idea_comments#comments
    %h2.grid_24 Kommentit
    .grid_24.comment_form
      = render "comments/form", model: @idea
    .comments.suffix_8
      = render partial: 'comments/comment', collection: @idea.comments.published
