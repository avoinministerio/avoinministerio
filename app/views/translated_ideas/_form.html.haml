#translated_idea_form
  %h1= t(".translation")
  = simple_form_for [@idea, @translated_idea] do |f|
    .grid_12
      = f.input :title, label: I18n.t("idea.new.title")
    .grid_16
      = f.input :summary, as: :text
    .grid_16
      = f.input :body, as: :text
      = f.label :language
      = f.select :language, Language.all.map{ |language| [language.full_name, language.name] }, :selected => @translated_idea.language
    .grid_16
      = f.hidden_field :idea_id, :value => @idea.id
      %br
      = f.submit @translated_idea.new_record? ? I18n.t("buttons.create") : I18n.t("buttons.update")

#original_idea
  %h1= t(".original")
  .grid_12
    %br
    = text_field_tag :original_title, @idea.title, :disabled => true
    %br
  .grid_16
    %br
    = text_area_tag :original_summary, @idea.summary, :disabled => true
    %br
  .grid_16
    %br
    = text_area_tag :original_summary, @idea.body, :disabled => true