.row-fluid
  .span12
    %h3
      KÄYTTÄJÄ
    .row-fluid
      .span1
        = image_tag(@citizen.image)
      %h1.name
        = @citizen.name
      %div
        = @citizen.email

    .btn-group
      = link_to "Lukitse", [:lock, :admin, @citizen], class: "btn btn-danger" unless @citizen.locked?
      = link_to "Vapauta", [:unlock, :admin, @citizen], class: "btn btn-inverse" if @citizen.locked?
      = link_to "Make politician", [:change_role_politician, :admin, @citizen], class: "btn btn-success" unless @citizen.is_politician
      = link_to "Make citizen", [:change_role_citizen, :admin, @citizen], class: "btn btn-success" if @citizen.is_politician
    .citizen-ideas
      %h2 Ideat
      %ul.ideas
        = list_of @citizen.ideas do |idea|
          = link_to idea.title, [:admin, idea]
    
    .citizen-comments
      %h2 Kommentit
      %ul.comments
        = list_of @citizen.comments do |comment|
          = link_to [:admin, comment] do
            %h5= truncate(comment.body, length: 200)
            %p
              IDEA:
              = comment.commentable.title