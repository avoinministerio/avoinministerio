= render partial: 'headline'

- if session[:ab_section_count] == 1
	= render partial: 'proposals_and_drafts', 
		locals: {section: "proposal_and_draft",
				 items: @proposals_and_drafts, items_counts: @proposal_and_drafts_counts, item_counter: 0 }
- else # session[:ab_section_count] == 2
	= render partial: 'proposals', 
		locals: {items: @proposals, items_counts: @proposals_counts, item_counter: 0, section: "proposal" }
	= render partial: 'drafts', 
		locals: {items: @drafts, items_counts: @draft_counts, item_counter: 3,  section: "draft" }

- if @newest_ideas
	= render partial: 'ideas'
- else
	= render partial: 'random_ideas'

= render partial: 'news'
= render partial: 'newsletter'
