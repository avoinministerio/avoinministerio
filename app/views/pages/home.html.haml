= javascript_include_tag "pages.js"

= render partial: 'headline'

- if @proposals_counts != nil
  = render partial: 'proposals', locals: {title: t('.proposals_title'), items: @proposals, items_counts: @proposals_counts, item_counter: 6, section: "proposal" }

- if @drafts.count != nil
  = render partial: 'drafts', locals: {title: t('.drafts_title'), items: @drafts, items_counts: @draft_counts, item_counter: 3,  section: "draft" }

- if @newest_ideas
  = render partial: 'ideas'
- else
  = render partial: 'random_ideas'

= render partial: 'news'
= render partial: 'newsletter'

:javascript
  homePageTour();
